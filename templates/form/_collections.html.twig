<div
        id="pictures"
        class="row"
        data-index="{{ form.pictures|length > 0 ? form.pictures|last.vars.name + 1 : 0 }}"
        data-prototype="{{ include("form/_picture.html.twig", {form: form.pictures.vars.prototype})|e("html_attr")
        }}">
            {% for picture in form.pictures %}
                <div class="col-12 col-md-6">
                    {{ include('form/_picture.html.twig', {form: picture}) }}
                </div>
            {% endfor %}
</div>

{{ form_errors(form.pictures) }}

<div type="button" class="btn btn-primary btn-new mb-3" data-collection="#pictures">
    <i class="fas fa-plus"></i>
    Ajouter une image
</div>


