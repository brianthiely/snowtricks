{% extends 'base.html.twig' %}

{% block body %}
    <main>
        <section>
            <div id="cover" class="text-white text-center px-3 d-flex flex-column">
                <h1> <span class="brand">Snowtricks</span>, la communauté des riders.</h1>
                <p class="lead text-center">Rejoignez la communauté Snowtricks pour partager et découvrir de nouveaux
                    tricks de snowboard avec d'autres passionnés</p>
            </div>
        </section>


        <section>
            <div class="container d-flex flex-wrap justify-content-evenly">
                {% for trick in tricks %}
                    <div class="card col-sm-6 col-md-2 col-lg-3 m-1 mt-4">
                        {% for picture in trick.pictures %}
                            <a href="#" class="h-75 object-fit-cover">
                                <img src="{{ picture.url }}" class="card-img-top h-100" alt="">
                            </a>
                        {% endfor %}
                        <div class="card-body p-3 w-100 d-flex justify-content-between align-items-center">
                            <p class="card-text m-0">{{ trick.name }}</p>
                            <div class="justify-content-end">
                                <a href="#"> <i class="fa fa-pencil fa-sm"></i></a>
                                <a href="#"><i class="fa fa-trash fa-sm ms-2"></i></a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </section>


    </main>
{% endblock %}
