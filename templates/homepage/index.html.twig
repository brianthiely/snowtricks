{% extends 'base.html.twig' %}
{% block body %}
    <main>
        <section>
            <div id="cover" class="text-white text-center px-3 d-flex flex-column">
                <h1> <span class="brand">Snowtricks</span>, la communauté des riders.</h1>
                <p class="lead text-center">Rejoignez la communauté Snowtricks pour partager et découvrir de nouveaux
                    tricks de snowboard avec d'autres passionnés</p>
                <div class="icon-container position-absolute mx-4" style="bottom:10px; right:10px;">
                    <a class="btn btn-link btn-circle" role="button" href="#tricks"><i class="text-dark fa
                    fa-arrow-down
                    fa-2x"></i>
                    </a>
                </div>
            </div>
        </section>

        <section id="tricks">
            <div class="album py-5 bg-light">
                {% if app.user %}
                    <div class="d-flex justify-content-end mx-5">
                        <a href="{{ path('trick-create') }}" class="btn btn-primary">Ajouter un trick</a>
                    </div>
                {% endif %}
                <div id="tricks-container" class="col d-flex flex-wrap justify-content-evenly tricks">
                    {% include 'trick/_trick_card.html.twig' %}
                </div>

                    <div class="d-flex justify-content-center mt-5">
                        <button type="button" id="see-more" class="btn btn-primary">
                            Voir plus
                        </button>
                    </div>

            </div>
        </section>
        {% if tricks|length > 15 %}
            <a class="btn btn-link btn-circle d-flex justify-content-end mx-4" role="button" href="#tricks"><i class="text-dark fa
                        fa-arrow-up
                        fa-2x"></i>
            </a>
        {% endif %}
    </main>
{% endblock %}

